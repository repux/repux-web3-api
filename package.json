{
  "name": "repux-web3-api",
  "version": "1.0.0",
  "description": "Smart Contract RepuX API",
  "author": "RepuX <support@repux.io>",
  "license": "MIT",
  "main": "build/lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/repux/repux-web3-api.git"
  },
  "bugs": {
    "url": "https://github.com/repux/repux-web3-api/issues"
  },
  "keywords": [
    "repux",
    "data",
    "marketplace",
    "protocol"
  ],
  "scripts": {
    "prebuild": "truffle compile --contracts_build_directory=./contracts --contracts_directory=./node_modules/@repux/repux-smart-contracts/contracts",
    "build": "WEBPACK_ENV=build webpack --mode production",
    "dev": "yarn prebuild && WEBPACK_ENV=dev webpack --mode development --progress --colors --watch",
    "test": "yarn prebuild && karma start --single-run --browsers ChromeHeadless",
    "test:watch": "yarn prebuild && karma start --auto-watch --browsers ChromeHeadless",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@repux/repux-smart-contracts": "git+ssh://git@github.com:repux/repux-smart-contracts#v1.1.1",
    "@semantic-release/git": "^5.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "karma": "^2.0.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-eslint": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "mocha": "^5.1.1",
    "semantic-release": "^15.4.0",
    "truffle-contract": "^3.0.5",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3"
  },
  "dependencies": {
    "bignumber.js": "^7.2.0",
    "web3": "^0.20.6"
  }
}
