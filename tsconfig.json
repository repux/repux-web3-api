{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./build/types",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true
  },
  "exclude": [
    "build",
    "node_modules",
    "**/*.spec.ts"
  ]
}
